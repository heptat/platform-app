<h1>Login</h1>

<% unless @error.nil? %>
  <%= @error %>
  <br/>
<% end %>

<form action="http://auth.platform.local/tokens/new" method="POST">

  <input type="hidden" name="callback" value="http://app.platform.local/books" />
  Username: <input type="field" name="username" /><br/>
  Password: <input type="field" name="password" /><br/>

  <input type="submit" name="submit" value="login">
</form>
